= form_for @article, html: { class: "form form-horizontal article" } do |f|
  = render 'layouts/errors', object: @article
  .form-group
    = f.label :title, class: 'control-label'
    .controls
      = f.text_field :title, class: 'form-control', required: true
    = error_span(@article[:title])
  .form-group
    = f.label :text, class: 'control-label'
    .controls
      = f.text_field :text, class: 'form-control', required: true
    = error_span(@article[:text])
  = f.submit nil,class: 'btn btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), articles_path, :class => 'btn btn-default'
